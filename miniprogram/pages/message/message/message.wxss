.block {
    background-color: #f2f5fa;
}

.cat_list {
    width: 700rpx;
    margin-left: 25rpx;
    margin-top: 30rpx;
    border-radius: 30rpx;
    box-shadow: 10rpx 15rpx 15rpx #aaaaaa;
    overflow: hidden;
